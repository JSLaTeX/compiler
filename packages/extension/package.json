{
	"name": "jslatex",
	"displayName": "JSLaTeX",
	"description": "Supercharge your LaTeX files with JavaScript!",
	"icon": "icons/icon.png",
	"type": "module",
	"version": "0.0.1",
	"publisher": "leonzalion",
	"license": "MIT",
	"homepage": "https://github.com/leonzalion/JSLaTeX",
	"repository": {
		"type": "git",
		"url": "https://github.com/leonzalion/JSLaTeX.git"
	},
	"engines": {
		"vscode": "^1.62.0"
	},
	"categories": [
		"Programming Languages",
		"Snippets",
		"Linters",
		"Formatters"
	],
	"keywords": [
		"latex",
		"tex",
		"ejs",
		"compile"
	],
	"main": "./dist/extension.js",
	"activationEvents": [
		"onLanguage:jslatex"
	],
	"contributes": {
		"languages": [
			{
				"id": "jslatex",
				"aliases": [
					"JSLaTeX",
					"jslatex"
				],
				"extensions": [
					".jtex"
				],
				"configuration": "./syntax/jslatex-language-configuration.json",
				"icon": {
					"light": "./icons/jslatex.png",
					"dark": "./icons/jslatex.png"
				}
			}
		],
		"grammars": [
			{
				"language": "jslatex",
				"scopeName": "text.tex.latex.jslatex",
				"path": "./syntax/JSLaTeX.tmLanguage.json",
				"embeddedLanguages": {
					"source.js": "javascript",
					"meta.embedded.block.latex": "latex"
				}
			}
		]
	},
	"scripts": {
		"watch": "tsc --watch",
		"release": "node-ts ./scripts/release.ts",
		"build": "node-ts ./scripts/build.ts",
		"prettier": "prettier --write .",
		"lint": "eslint --cache --fix .",
		"tc": "tsc --noEmit"
	},
	"devDependencies": {
		"@types/edit-json-file": "^1.7.0",
		"@types/vscode": "^1.65.0",
		"edit-json-file": "^1.7.0",
		"vsce": "^2.7.0"
	}
}
